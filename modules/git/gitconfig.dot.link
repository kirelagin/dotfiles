[help]
	autocorrect = 1

[user]
	name = Kirill Elagin
	email = kirelagin@gmail.com

[color]
	ui = auto

[core]
	pager = less -+F -X
	excludesfile = ~/.gitexclude

[alias]
	st = status
	unstage = reset HEAD --
	com = commit
	cam = commit -am
	glog = log --graph --date-order --abbrev-commit

[rebase]
	autosquash = true

[push]
	default = current

[github]
	user = kirelagin

[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[fetch]
	recurseSubmodules = false
